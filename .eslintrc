{
    "extends": ["eslint:recommended"],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "babelOptions": {
            "configFile": "./.babelrc"
        }
    },
    "plugins": ["@babel"],
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "no-unused-vars": ["warn", { "vars": "all", "args": "none" }],
        "no-extra-semi": 0
    },
    "globals": {
        "it": "readonly",
        "describe": "readonly",
        "afterEach": "readonly",
        "beforeEach": "readonly",
        "expect": "readonly",
        "jest": "readonly",
        "gc": "readonly"
    }
}
